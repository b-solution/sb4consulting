
<div id="page3">
  <!--==============================header=================================-->

  <header>
    <%= render :partial => 'shared/header' %>
    <div class="row-bot">
      <div class="center-shadow">
      </div>
    </div>
  </header>
  <!--==============================content================================-->
  <section >
    <div class="content">
      <div class="row">
        <div class="col-md-2">

        </div>
        <article class="col-md-8 col-xs-6 col-sm-10">
          <% if @services.any? %>
              <div class="row">
                <% @services.each do |service, idx| %>
                    <div class="col-md-4 col-xs-10 col-sm-6">
                      <h4 class="p1"><h3><%= service.name %></h3></h4>
                      <p class="prev-indent-bot"><%= service.header.to_s.blank? ? service.body.html_safe : service.header.html_safe %></p>
                      <a class="link-1" href="#"><%= link_to( 'Know more', "/services/#{service.identifier}") if service.header.to_s.present? %></a>
                    </div>
                <% end %>
              </div>
          <% end %>
        </article>
        <div class="col-md-2">

        </div>
      </div>

    </div>
  </section>
</div>

<script type="text/javascript"> Cufon.now(); </script>