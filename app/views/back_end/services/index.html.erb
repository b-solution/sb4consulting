<p id="notice"><%= notice %></p>

<h1>Listing Back End Services</h1>

<%= link_to 'New Service', new_back_end_service_path , class: "pull-right btn btn-primary" %>
<table class="table table-responsive table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Language</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @back_end_services.each do |back_end_service| %>
      <tr>
        <td><%= back_end_service.name %></td>
        <td><%= back_end_service.locale %></td>
        <td><%= back_end_service.active %></td>
        <td><%= link_to 'Show', back_end_service, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_back_end_service_path(back_end_service), class: 'btn btn-success' %></td>
        <td><%= link_to 'Destroy', back_end_service, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

