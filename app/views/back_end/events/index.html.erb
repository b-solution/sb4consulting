<p id="notice"><%= notice %></p>

<h1>Listing Back End Events</h1>

<%= link_to 'New Event', new_back_end_event_path, class: "pull-right btn btn-primary" %>
<table class="table table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Body</th>
      <th>Active</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @back_end_events.each do |back_end_event| %>
      <tr>
        <td><%= back_end_event.name %></td>
        <td><%= back_end_event.body.html_safe %></td>
        <td><%= back_end_event.active %></td>
        <td><%= back_end_event.date %></td>
        <td><%= link_to 'Show', back_end_event , class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_back_end_event_path(back_end_event) , class: 'btn btn-success' %></td>
        <td><%= link_to 'Destroy', back_end_event, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


