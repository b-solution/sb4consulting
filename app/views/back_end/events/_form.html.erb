<%= form_for(@back_end_event) do |f| %>
    <% if @back_end_event.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@back_end_event.errors.count, "error") %> prohibited this back_end_event from being saved:</h2>

          <ul>
            <% @back_end_event.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <div class="col-md-2">
      </div>
      <div class="col-sm-10">
        <%= f.label :locale %>
        <%= f.select :locale, options_for_select(['fr','en'], @back_end_event.locale)%>

      </div>
    </div>

    <div class="form-group">
      <%= f.label :name, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class:"form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :date , class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.date_select :date, class:"form-control"  %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-2">
      </div>
      <div class="col-sm-10">
        <%= f.check_box :active%>
        <%= f.label :active %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :body, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_area :body, :class => 'ckeditor' %>
      </div>
    </div>


    <div class="row">
      <div class="pull-right col-md-2">
        <%= submit_tag  "Submit", class: 'btn btn-primary' %>
      </div>
    </div>
<% end %>
