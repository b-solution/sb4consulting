<div class="extra" id="page5">
  <!--==============================header=================================-->
  <header>
    <%= render :partial => 'shared/header' %>
    <div class="row-bot">
      <div class="center-shadow">
      </div>
    </div>
  </header>

  <!--==============================content================================-->
  <section id="content">
    <div class="content-bg">
      <div class="main">
        <div class="row">
          <div class="col-md-12">
            <div class="wrapper">
              <article class="col-md-8">
                <h3>Contact Form</h3>
                <%= form_for(@contact, {id: 'contact-form2'}) do |f| %>

                    <div class="form-group">
                      <label for="inputEmail3" class="col-sm-2 control-label"> <%= f.label :email %></label>
                      <div class="col-sm-10">
                        <%= f.text_field :email , class:"form-control", id:"inputEmail" %>
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="inputEmail3" class="col-sm-2 control-label">  <%= f.label :subject %> </label>
                      <div class="col-sm-10">
                        <%= f.text_field :subject, class:"form-control", id:"inputSubject" %>
                      </div>
                    </div>
                    <div class="form-group" >
                      <label for="inputEmail3" class="col-sm-2 control-label">Message</label>
                      <div class="col-sm-10">
                        <%= f.text_area :text, class:"form-control", id:"inputText"%>
                      </div>
                    </div>
                    <div class="buttons2">
                      <a href="#" class="btn btn-warning" onClick="document.getElementById('contact-form2').reset()">Clear</a>
                      <a href="#" class="btn btn-primary" onClick="document.getElementById('contact-form2').submit()">Send</a>
                    </div>
                <% end %>
              </article>
            </div>
          </div>
        </div>
      </div>
      <div class="block"></div>
    </div>
  </section>
</div>

<!--==============================footer=================================-->

