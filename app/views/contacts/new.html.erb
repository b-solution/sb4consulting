<div id="page5">
  <!--==============================header=================================-->
  <header>
    <%= render :partial => 'shared/header' %>
    <div class="row-bot">
      <div class="center-shadow">
      </div>
    </div>
  </header>

  <!--==============================content================================-->
  <section id="content">
    <div class="row">
      <div class="col-md-12">
        <div class=" col-md-2 col-sm-1">
        </div>
        <div class="col-md-8 col-sm-10  col-xs-12">

          <div class="row">
            <div class="col-md-4 col-sm-4 col-xs-18">
              <h5>&nbsp;</h5>
              <div class="col-md-12"><strong>SB4Consulting</strong></div>
              <div class="col-md-12">
                 Lotissement Lou Miradou <br/>Saint Drezery. 34160. FRANCE
              </div>
              <div  class="col-md-12">
                <strong><%= t('contact.phone') %>: </strong>+ (33) 6 63 47 25 97
              </div>
            </div>
            <div class="col-md-8 col-sm-8 col-xs-6">
              <h3><%= t('contact.contact_page ') %></h3>
              <%= form_for(@contact, :html => {:class => 'form-horizontal'}) do |f| %>


                  <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label"> <%= f.label t('contact.name') %></label>
                    <div class="col-sm-10">
                      <%= f.text_field :name , class:"form-control", id:"inputEmail" %>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label"> <%= f.label t('contact.organisation') %></label>
                    <div class="col-sm-10">
                      <%= f.text_field :organisation , class:"form-control", id:"inputEmail" %>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label"> <%= f.label :email %></label>
                    <div class="col-sm-10">
                      <%= f.text_field :email , class:"form-control", id:"inputEmail" %>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">  <%= f.label t('contact.subject') %> </label>
                    <div class="col-sm-10">
                      <%= f.text_field :subject, class:"form-control", id:"inputSubject" %>
                    </div>
                  </div>
                  <div class="form-group" >
                    <label for="inputEmail3" class="col-sm-2 control-label"><%= t('contact.message') %></label>
                    <div class="col-sm-10">
                      <%= f.text_area :text, class:"form-control", id:"inputText"%>
                    </div>
                  </div>
                  <div class="buttons2">
                    <%= submit_tag t('contact.send'), class: "btn btn-primary" %>
                  </div>
              <% end %>
            </div>
          </div>

        </div>
        <div class=" col-md-2 col-sm-1">
        </div>
      </div>
    </div>
  </section>
</div>
