.header{
    background: url(<%=  asset_path 'header.png' %>);
    background-size: cover;
    height:150px;
}
.header img{
    height: 130px;
    padding-top:20px
    
}
.sperator{
    height:25px;
    background: #000;
    width:100%
}
.sperator2{
background:#162EA2;  
height:15px;
width:100%
}
.sperator3{
background:#000;  
height:10px;
width:100%
}
.navbar-default{
    background:#162EA2;
    margin-top:0;
    border:0;
    border-radius: 0;
    padding-top:10px;
    padding-bottom:10px;
    margin-bottom: 0

}
.navbar-default .container{
    padding-right:5%;
     /*height: 40px;*/
}
.navbar-nav>li{
    /*background: #000 url(<%=  asset_path "title-bar-gloss.png" %>) repeat-x top center;*/
    margin-left:15px;
    border-radius:7px;
    width:120px;
    z-index: 999;

}
.navbar-nav>li>a {
    padding-top:10px;
    padding-bottom:8px;

}
.navbar-default .navbar-nav>li>a,.navbar-default .navbar-nav>li>a:hover{
    color:#fff;
    text-transform: uppercase;
    font-family:sans-serif Roboto;
    text-align: center
}
.content-body{
    padding-top:30px
}
.content-body .col-md-2{
    padding:0
}
.content-body .col-md-3 img{
    height:230px
}
.content-body .third img{
    margin-top:7em
}
.contact-icons{
    margin-top:15px
}
.contact-icons a{
    margin-right:15px
}
.contact-icons a img{
    height: 100px
}
.form{
    background: url(<%=  asset_path "form1.png" %>);
    background-size:100%;
    height:700px;
    padding-top:10em
    
}
.form .container{
    padding-right: 16%;
    padding-left: 16%
}
.form-content{
  background: url(<%=  asset_path "photo.png" %>)no-repeat;
    background-size:100% 400px;   
    height:500px;
    padding:20px
}
.form-content  .left-side{
 padding-left:40px  ;
    padding-right:5px
}
.form-content  .left-sider{
    margin-top:40px;
    border-right:2px solid #ddd;
    padding-bottom: 20px
}
.form-content  .left-side h2{
    color:rgb(210, 88, 62);
    font-weight: lighter;
    text-transform: capitalize
}
.form-content  .left-side p{
    color:rgba(0,0,0,0.4);
    margin-bottom:5px;
    font-size: 18px;
    text-transform: capitalize
}
.form-content .contact-icons img{
  width:85px;
    height:85px
}
.right-side{
    padding-top:20px;
    padding-right:40px
}
.form-content .form-group{
    margin-bottom:10px;
    
}
.form-content .form-control{
  border-radius: 0  ;
    background:#ddd
}
.form-content .btn-primary{
    background:rgb(0, 16, 84);
    font-size:22px;
    padding:5px 30px;
    font-weight: lighter;
    font-family: Roboto;
    float: right
}

@media(max-width: 1005px){
    .form-content .contact-icons img{
  width:50px;
    height:50px
}
     .form .container{
    padding-right:15px;
    padding-left:15px;
     width:100%
}
}
@media(max-width:765px){
  .right-side{
      padding-left:40px
  }  
}
